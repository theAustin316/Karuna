<resources xmlns:tools="http://schemas.android.com/tools">


    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorSurface">@color/colorSurface</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/colorPrimaryDark
        </item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="iconTint">@color/textColorPrimary</item>

        <item name="chipStyle">@style/AppTheme.Chip</item>
    </style>

    <style name="AppTheme.Chip" parent="Widget.MaterialComponents.Chip.Filter"></style>

    <style name="CountStyle">
        <item name="android:textSize">@dimen/_18ssp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="CountLabelStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="layout_constraintWidth_percent">0.33</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

    <style name="HomeCardStyle">
        <item name="cardElevation">@dimen/_1sdp</item>
        <item name="cardBackgroundColor">?attr/colorSurface</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="android:layout_margin">@dimen/_6sdp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="StateCardStyle">
        <item name="cardElevation">@dimen/_1sdp</item>
        <item name="cardBackgroundColor">?attr/colorSurface</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="android:layout_marginTop">@dimen/_8sdp</item>
        <item name="android:layout_marginBottom">@dimen/_8sdp</item>
        <item name="android:layout_marginLeft">@dimen/_6sdp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="HomeStateCardStyle">
        <item name="cardElevation">@dimen/_1sdp</item>
        <item name="cardBackgroundColor">?attr/colorSurface</item>
        <item name="cardUseCompatPadding">true</item>
    </style>


    <style name="ChipStyle" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="chipBackgroundColor">?attr/colorSurface</item>
        <item name="elevation">0.5dp</item>
    </style>

    <style name="Divider">
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/divider</item>
        <item name="android:layout_marginTop">@dimen/_20sdp</item>
    </style>

    <style name="circleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10%</item>
    </style>

    <style name="AppTheme.StateSectionLabel">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">@dimen/_9ssp</item>
        <item name="layout_constraintWidth_percent">0.2</item>
        <item name="android:paddingTop">@dimen/_10sdp</item>
        <item name="android:paddingBottom">@dimen/_10sdp</item>
    </style>


    <style name="FilterHeader">
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">@dimen/_8sdp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>
